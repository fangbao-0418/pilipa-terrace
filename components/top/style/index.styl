.pilipa-terrace-top
  background: #fff
  padding: 0 16px
  .icon
    cursor: pointer
    display: inline-block
    background-repeat: no-repeat
    background-size: 100% 100%
  .username
    font-size: 14px
    color: #333333
    cursor pointer
  .top-right
    line-height: 64px
    float: right
    &>span 
      vertical-align: middle
  .message
    position: relative
    .point
      position: absolute
      right:-2px
      top: -2px
      display: inline-block
      width: 6px
      height: 6px
      border-radius: 50%
      background: red