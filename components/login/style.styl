.pilipa-terrace-login-container
  background: url('../assets/images/login-bj.png')
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  ul
    list-style none
    padding: 0
    margin: 0
  .box
    width: 408px
    // height: 450px
    padding: 0 24px 50px
    position: absolute
    left: 0
    right: 0
    top: 50%
    margin: 0 auto
    background: #FFFFFF
    transform: translateY(-50%)
    .title
      margin-top: 32px
      font-size: 20px
      text-align: center
      color: rgba(0, 0, 0, .65)
      font-weight: bold
      margin-bottom: 30px
    .switch
      border-bottom: 1px solid #d9d9d9
      text-align: center
      span 
        font-size: 16px
        padding: 0px 20px 8px 20px
        color: #666666
        border-bottom: 1px solid transparent
        display: inline-block
        margin: 0 30px
        cursor pointer
        position relative
        bottom: -1px
        &.active
          color: #1890ff
          border-bottom: 1px solid #1890ff
    .sms
      margin-top: 32px
      ul
        li
          margin-bottom: 24px
          height: 42px
          position relative
          .error
            position: absolute
            bottom: -20px
            left: 0px
            color: red
          &.active
            .phone, .verify-text, .sms-verify-text
              border: 1px solid #1890ff
            .phone
              &:before
                background: url('../assets/images/sj.png') no-repeat
            .verify-text
              &:before
                background: url('../assets/images/yz.png') no-repeat
            .sms-verify-text
              &:before
                background: url('../assets/images/sjyz.png') no-repeat
          &.has-error
            .phone, .verify-text, .sms-verify-text
              border: 1px solid red
      input 
        outline: none
        border: none
        font-size: 14px
        color: #333333
        caret-color: #1890ff
        &::input-placeholder
          color: #d9d9d9
      .verify-image
        float: right
      .phone, .verify-text, .sms-verify-text
        height: 40px
        border: 1px solid #e8e8e8
        box-sizing: content-box
        position relative
        width: 100%
        transition: all 100ms
        &:hover
          border: 1px solid #1890ff
        input 
          line-height: 40px
          height: 40px
          position: absolute
          width: 100%
          top: 0
          left: 0
          padding-left: 30px
        &:before
          content: ''
          float: left
          position relative
          z-index: 2
      .phone
        &:before
          width: 13px
          height: 19px
          margin: 10px 0 auto 8px
          background: url('../assets/images/sjh.png') no-repeat
        &:hover:before
          background: url('../assets/images/sj.png') no-repeat
      .verify-text
        display: inline-block
        width: 240px
        &:before
          width: 15px
          height: 17px
          margin: 12px 0 auto 8px
          background: url('../assets/images/yzh.png') no-repeat
        &:hover:before
          background: url('../assets/images/yz.png') no-repeat
      .sms-verify-text
        input 
          padding-right: 100px
        span 
          position absolute
          z-index: 2
          color: #1890ff
          font-size: 12px
          line-height: 40px
          right: 10px
          cursor pointer
          width: 80px
          &:after
            float: left
            content: ''
            width: 1px
            height: 20px
            background: #CCCCCC
            margin: 10px 10px auto 0
        &:before
          width: 15px
          height: 17px
          margin: 12px 0 auto 8px
          background: url('../assets/images/sjyzh.png') no-repeat
        &:hover:before
          background: url('../assets/images/sjyz.png') no-repeat
      .login-btn
        width: 100%
        margin-top: 16px
  .select-company
    ul
      position: absolute
      width: 240px
      margin: auto auto
      left: 0
      right: 0
      top: 50%
      transform: translateY(-50%)
      li
        span
          display: block
          background: #FFFFFF
          border-radius: 4px
          height: 40px
          margin-bottom: 10px
          font-size: 14px
          line-height: 40px
          text-align: center
          cursor pointer
          user-select: none
          &:hover
            color: #1890FF
  .footer
    left: 0
    right: 0
    position: absolute
    bottom: 20px
    text-align: center
    span 
      font-size: 12px
      color: #FFFFFF